SELECT b.*, group_concat(DISTINCT a.name_arme SEPARATOR ', ') as armes FROM bandits as b
JOIN bandits_has_armes as bha ON bha.bandits_idbandits = b.idbandits
JOIN armes as a ON a.idarmes = bha.armes_idarmes;

