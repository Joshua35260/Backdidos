CREATE TABLE bandits(
  `id` INT NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(100) NOT NULL,
  `age` INT NULL,
  `prime` INT NOT NULL,
  `description` VARCHAR(255) NULL,
  `crimes` VARCHAR(255) NOT NULL,
  `dead` BOOL NOT NULL,
  `alive` BOOL NOT NULL,
  `deadoralive` BOOL NOT NULL,
  `status` BOOL NOT NULL,
  `image` VARCHAR(100) NOT NULL,
  `voix` VARCHAR(100) NULL,
  `ville` VARCHAR(100) NULL,
  `latitude` FLOAT NULL,
  `longitude` FLOAT NULL,
  `rating` BOOL NOT NULL,
  `armes` VARCHAR(100) NULL,	
  PRIMARY KEY (`id`)
);

